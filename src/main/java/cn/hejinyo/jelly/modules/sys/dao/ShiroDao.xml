<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hejinyo.jelly.modules.sys.dao.ShiroDao">

    <!-- 表基本列 -->
    <sql id="Base_Column_List">
        user_id, nick_name, user_name, user_pwd, user_salt, avatar, email, phone, login_ip,
        login_time, state, create_time, create_id, update_time, update_id
    </sql>

    <!-- 实体映射 -->
    <resultMap id="BaseResultMap" type="cn.hejinyo.jelly.modules.sys.model.dto.LoginUserDTO">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="nick_name" jdbcType="VARCHAR" property="nickName"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="user_pwd" jdbcType="VARCHAR" property="userPwd"/>
        <result column="user_salt" jdbcType="VARCHAR" property="userSalt"/>
        <result column="avatar" jdbcType="VARCHAR" property="avatar"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="login_ip" jdbcType="VARCHAR" property="loginIp"/>
        <result column="login_time" jdbcType="TIMESTAMP" property="loginTime"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
    </resultMap>

    <!-- 执行登录，根据用户名查询用户登录信息 -->
    <select id="findLoginUser" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE
        user_name = #{username}
    </select>

    <!-- 查找用户编号对应的角色编码字符串 -->
    <select id="getUserRoleSet" resultType="String">
        SELECT role_code
        FROM
            sys_role r
            LEFT JOIN sys_user_role ur ON ur.role_id = r.role_id
        WHERE
            ur.user_id = #{userId} AND r.state = 0
    </select>

    <!-- 根据用户Id获得权限列表字符串 -->
    <select id="getUserPermisSet" resultType="String">
        SELECT concat(sp.res_code, ':', sp.perm_code) perm_code
        FROM sys_user_role sur
            LEFT JOIN sys_role sr ON sr.role_id = sur.role_id AND sr.state = 0
            LEFT JOIN sys_role_resource srr ON srr.role_id = sr.role_id
            LEFT JOIN sys_permission sp ON sp.perm_id = srr.perm_id
        WHERE sur.user_id = #{userId} AND sp.state = 0
    </select>

    <!-- 根据查询所有权限列表字符串 -->
    <select id="getAllPermisSet" resultType="String">
        SELECT concat(sp.res_code, ':', sp.perm_code) perm_code
        FROM sys_permission sp
    </select>


</mapper>