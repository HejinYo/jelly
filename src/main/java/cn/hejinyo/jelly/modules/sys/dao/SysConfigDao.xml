<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hejinyo.jelly.modules.sys.dao.SysConfigDao">
    <select id="findOne" resultType="cn.hejinyo.jelly.modules.sys.model.SysConfig">
        SELECT *
        FROM sys_config
        WHERE id = #{id}
    </select>

    <select id="findList" parameterType="map" resultType="cn.hejinyo.jelly.modules.sys.model.SysConfig">
        select * from sys_config where status = 1
        <if test="key != null and key.trim() != ''">
            and `key` like concat('%',#{key},'%')
        </if>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="findTotal" parameterType="map" resultType="int">
        select count(*) from sys_config where status = 1
        <if test="key != null and key.trim() != ''">
            and `key` like concat('%',#{key},'%')
        </if>
    </select>

    <insert id="save" parameterType="cn.hejinyo.jelly.modules.sys.model.SysConfig">
        INSERT INTO sys_config (`key`, `value`, remark)
        VALUES (#{key}, #{value}, #{remark})
    </insert>

    <update id="update" parameterType="cn.hejinyo.jelly.modules.sys.model.SysConfig">
        UPDATE sys_config
        SET `key` = #{key}, `value` = #{value}, remark = #{remark}
        WHERE id = #{id}
    </update>

    <!-- 根据key，更新value -->
    <update id="updateValueByKey" parameterType="map">
        UPDATE sys_config
        SET `value` = #{value}
        WHERE `key` = #{key}
    </update>

    <!-- 根据key，查询value -->
    <select id="findByKey" parameterType="string" resultType="cn.hejinyo.jelly.modules.sys.model.SysConfig">
        SELECT *
        FROM sys_config
        WHERE `key` = #{key}
    </select>

    <delete id="deleteBatch" parameterType="int">
        delete from sys_config where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


</mapper>