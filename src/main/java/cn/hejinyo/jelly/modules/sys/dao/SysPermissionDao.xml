<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hejinyo.jelly.modules.sys.dao.SysPermissionDao">

    <!-- 实体映射 -->
    <resultMap id="BaseResultMap" type="cn.hejinyo.jelly.modules.sys.model.SysPermission">
        <id column="perm_id" jdbcType="INTEGER" property="permId"/>
        <result column="res_id" jdbcType="INTEGER" property="resId"/>
        <result column="res_code" jdbcType="VARCHAR" property="resCode"/>
        <result column="perm_code" jdbcType="VARCHAR" property="permCode"/>
        <result column="perm_name" jdbcType="VARCHAR" property="permName"/>
        <result column="perm_url" jdbcType="VARCHAR" property="permUrl"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="create_id" jdbcType="INTEGER" property="createId"/>
    </resultMap>

    <!-- 表基本列 -->
    <sql id="Base_Column_List">
        perm_id, res_id, res_code, perm_code, perm_name, perm_url, state, create_time, create_id
    </sql>

    <!-- 通用查询sql -->
    <sql id="Base_Where_SQL">
        <where>
            <if test="resId != null and !&quot;&quot;.equals(resId)">and res_id = #{resId}</if>
            <if test="resCode != null and !&quot;&quot;.equals(resCode)">and res_code = #{resCode}</if>
            <if test="permCode != null and !&quot;&quot;.equals(permCode)">and perm_code = #{permCode}</if>
            <if test="permName != null and !&quot;&quot;.equals(permName)">and perm_name = #{permName}</if>
            <if test="permUrl != null and !&quot;&quot;.equals(permUrl)">and perm_url = #{permUrl}</if>
            <if test="state != null and !&quot;&quot;.equals(state)">and state = #{state}</if>
            <if test="createTime != null and !&quot;&quot;.equals(createTime)">and create_time = #{createTime}</if>
            <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
        </where>
    </sql>

    <resultMap id="RolePermissionResultMap" type="cn.hejinyo.jelly.modules.sys.model.dto.RolePermissionTreeDTO">
        <result column="res_id" jdbcType="INTEGER" property="resId"/>
        <result column="res_pid" jdbcType="INTEGER" property="resPid"/>
        <result column="perm_id" jdbcType="INTEGER" property="permId"/>
        <result column="res_code" jdbcType="VARCHAR" property="resCode"/>
        <result column="perm_code" jdbcType="VARCHAR" property="permCode"/>
        <result column="res_name" jdbcType="VARCHAR" property="resName"/>
        <result column="perm_name" jdbcType="VARCHAR" property="permName"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
    </resultMap>

    <!-- 根据用户Id获得权限列表字符串 -->
    <select id="getUserPermisSet" resultType="String">
        SELECT concat(sp.res_code, ':', sp.perm_code) perm_code
        FROM sys_user_role sur
            LEFT JOIN sys_role sr ON sr.role_id = sur.role_id
            LEFT JOIN sys_role_resource srr ON srr.role_id = sr.role_id
            LEFT JOIN sys_permission sp ON sp.perm_id = srr.perm_id
        WHERE sur.user_id = #{userId}
    </select>

    <!-- 根据角色Id获得权限列表字符串 -->
    <select id="getRolePermissionSet" resultType="String">
        SELECT concat(sp.res_code, ':', sp.perm_code) perm_code
        FROM sys_permission sp
            LEFT JOIN sys_role_resource srr ON sp.perm_id = srr.perm_id
        WHERE srr.role_id = #{roleId}
    </select>

    <!-- 根据查询所有权限列表字符串 -->
    <select id="getAllPermisSet" resultType="String">
        SELECT concat(sp.res_code, ':', sp.perm_code) perm_code
        FROM sys_permission sp
    </select>

    <select id="findAllResourceList" resultMap="RolePermissionResultMap">
        SELECT
            res_id,
            res_code,
            res_name,
            res_pid,
            'resource' type
        FROM sys_resource
        ORDER BY res_pid, seq
    </select>

    <select id="findAllPermissionList" resultMap="RolePermissionResultMap">
        SELECT
            concat(sp.res_code, ':', sp.perm_code) res_code,
            'permission'                           type,
            sp.perm_name                           res_name,
            sp.perm_name,
            sr.res_id,
            sr.res_pid,
            sp.perm_id,
            sp.perm_code
        FROM sys_permission sp
            LEFT JOIN sys_resource sr ON sr.res_code = sp.res_code AND sr.res_code IS NOT NULL
        WHERE sr.res_pid IS NOT NULL
        ORDER BY sr.res_pid, sr.seq
    </select>

    <!--删除资源对应权限数据-->
    <delete id="deletePermByResCode">
        DELETE
        FROM sys_permission
        WHERE
            res_code = #{resCode}
    </delete>


    <!-- *******************************************分割线***********************************************************-->

    <!-- 插入一条记录 -->
    <insert id="save" keyProperty="permId" useGeneratedKeys="true">
        insert into sys_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != resId">res_id,</if>
            <if test="null != resCode">res_code,</if>
            <if test="null != permCode">perm_code,</if>
            <if test="null != permName">perm_name,</if>
            <if test="null != permUrl">perm_url,</if>
            <if test="null != state">state,</if>
            <if test="null != createTime">create_time,</if>
            <if test="null != createId">create_id,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != resId">#{resId},</if>
            <if test="null != resCode">#{resCode},</if>
            <if test="null != permCode">#{permCode},</if>
            <if test="null != permName">#{permName},</if>
            <if test="null != permUrl">#{permUrl},</if>
            <if test="null != state">#{state},</if>
            <if test="null != createTime">#{createTime},</if>
            <if test="null != createId">#{createId},</if>
        </trim>
    </insert>

    <!-- 更新一条记录 -->
    <update id="update">
        update sys_permission
        <set>
            <if test="null != resId">res_id = #{resId},</if>
            <if test="null != resCode">res_code = #{resCode},</if>
            <if test="null != permCode">perm_code = #{permCode},</if>
            <if test="null != permName">perm_name = #{permName},</if>
            <if test="null != permUrl">perm_url = #{permUrl},</if>
            <if test="null != state">state = #{state},</if>
            <if test="null != createTime">create_time = #{createTime},</if>
            <if test="null != createId">create_id = #{createId},</if>
        </set>
        where perm_id = #{permId}
    </update>

    <!-- 删除给定主键的记录 -->
    <delete id="delete">
        DELETE
        FROM sys_permission
        WHERE
            perm_id = #{permId}
    </delete>

    <!-- 多个主键批量删除记录 -->
    <delete id="deleteBatch">
        delete
        from sys_permission
        where
        perm_id in
        <foreach collection="array" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 多个实体批量删除记录 -->
    <delete id="deleteList">
        delete
        from sys_permission
        where
        perm_id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item.permId}
        </foreach>
    </delete>

    <!-- 主键查找一条记录 -->
    <select id="findOne" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_permission
        where perm_id = #{permId}
    </select>

    <!-- 查询多条 -->
    <select id="findList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_permission
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 分页查询 -->
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_permission
        <where>
            <if test="resId != null and !&quot;&quot;.equals(resId)">and res_id = #{resId}</if>
            <if test="resCode != null and !&quot;&quot;.equals(resCode)">and res_code like concat('%',#{resCode},'%')</if>
            <if test="permCode != null and !&quot;&quot;.equals(permCode)">and perm_code like concat('%',#{permCode},'%')</if>
            <if test="permName != null and !&quot;&quot;.equals(permName)">and perm_name like concat('%',#{permName},'%')</if>
            <if test="permUrl != null and !&quot;&quot;.equals(permUrl)">and perm_url like concat('%',#{permUrl},'%')</if>
            <if test="state != null and !&quot;&quot;.equals(state)">and state = #{state}</if>
            <if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') = STR_TO_DATE(#{createTime},'%Y-%m-%d'))</if>
            <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
        </where>
    </select>

    <!-- 查询记录数量 -->
    <select id="count" resultType="int">
        select
        count(*)
        from sys_permission
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 查询记录是否存在 -->
    <select id="exsit" resultType="boolean">
        select
        count(*)
        from sys_permission
        <include refid="Base_Where_SQL"/>
    </select>

</mapper>