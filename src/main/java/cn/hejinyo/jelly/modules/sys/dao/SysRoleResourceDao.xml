<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hejinyo.jelly.modules.sys.dao.SysRoleResourceDao">

    <!-- 实体映射 -->
    <resultMap id="BaseResultMap" type="cn.hejinyo.jelly.modules.sys.model.SysRoleResource">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="res_id" jdbcType="INTEGER" property="resId"/>
        <result column="perm_id" jdbcType="INTEGER" property="permId"/>
    </resultMap>

    <!-- 表基本列 -->
    <sql id="Base_Column_List">
        id, role_id, res_id, perm_id
    </sql>

    <!-- 通用查询sql -->
    <sql id="Base_Where_SQL">
        <where>
            <if test="roleId != null and !&quot;&quot;.equals(roleId)">and role_id = #{roleId}</if>
            <if test="resId != null and !&quot;&quot;.equals(resId)">and res_id = #{resId}</if>
            <if test="permId != null and !&quot;&quot;.equals(permId)">and perm_id = #{permId}</if>
        </where>
    </sql>

    <!-- 保存角色权限 -->
    <insert id="saveRolePermission">
        INSERT INTO sys_role_resource (role_id, res_id, perm_id)
        VALUES
        <foreach collection="permission" index="index" item="item" separator=",">
            (#{roleId}, #{item.resId}, #{item.permId})
        </foreach>
    </insert>

    <!-- 插入一条记录 -->
    <insert id="save" keyProperty="id" useGeneratedKeys="true">
        insert into sys_role_resource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != roleId">role_id,</if>
            <if test="null != resId">res_id,</if>
            <if test="null != permId">perm_id,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != roleId">#{roleId},</if>
            <if test="null != resId">#{resId},</if>
            <if test="null != permId">#{permId},</if>
        </trim>
    </insert>

    <!-- 更新一条记录 -->
    <update id="update">
        update sys_role_resource
        <set>
            <if test="null != roleId">role_id = #{roleId},</if>
            <if test="null != resId">res_id = #{resId},</if>
            <if test="null != permId">perm_id = #{permId},</if>
        </set>
        where id = #{id}
    </update>

    <!-- 删除给定主键的记录 -->
    <delete id="delete">
        DELETE
        FROM sys_role_resource
        WHERE
            id = #{id}
    </delete>

    <!-- 多个主键批量删除记录 -->
    <delete id="deleteBatch">
        delete
        from sys_role_resource
        where
        id in
        <foreach collection="array" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 多个实体批量删除记录 -->
    <delete id="deleteList">
        delete
        from sys_role_resource
        where
        id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </delete>

    <!-- 主键查找一条记录 -->
    <select id="findOne" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role_resource
        where id = #{id}
    </select>

    <!-- 查询多条 -->
    <select id="findList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role_resource
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 分页查询 -->
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role_resource
        <where>
            <if test="roleId != null and !&quot;&quot;.equals(roleId)">and role_id = #{roleId}</if>
            <if test="resId != null and !&quot;&quot;.equals(resId)">and res_id = #{resId}</if>
            <if test="permId != null and !&quot;&quot;.equals(permId)">and perm_id = #{permId}</if>
        </where>
    </select>

    <!-- 查询记录数量 -->
    <select id="count" resultType="int">
        select
        count(*)
        from sys_role_resource
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 查询记录是否存在 -->
    <select id="exsit" resultType="boolean">
        select
        count(*)
        from sys_role_resource
        <include refid="Base_Where_SQL"/>
    </select>


</mapper>